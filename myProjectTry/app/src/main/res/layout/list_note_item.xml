<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNoteHeadItem"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNoteTextItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/tvNoteHeadItem"
        app:layout_constraintStart_toStartOf="@+id/tvNoteHeadItem"
        app:layout_constraintTop_toBottomOf="@+id/tvNoteHeadItem" />
</androidx.constraintlayout.widget.ConstraintLayout>